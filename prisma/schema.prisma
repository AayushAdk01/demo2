generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  User_Id   Int    @id @default(autoincrement())
  // One-to-one relation with Player using an explicit relation name "UserPlayer"
  Player    Player @relation("UserPlayer", fields: [Player_Id], references: [Player_ID])
  Player_Id Int    @unique
  Username  String
}

model Player {
  Player_ID    Int    @id @default(autoincrement())
  Player_name  String
  Playerpoint  Int
  Streak       Int
  LastLogin    DateTime
  
  Level        Level?     @relation(fields: [Level_Id], references: [Level_Id])
  Level_Id     Int?
  
  Milestone    Milestone? @relation(fields: [Milestone_Id], references: [Milestone_Id])
  Milestone_Id Int?
  
  Temp_Score   Int @default(-1)
  
  // Back-relation for the one-to-one User <-> Player relation.
  User         User? @relation("UserPlayer")
  
}



model Level {
  Level_Id     Int    @id @default(autoincrement())
  Level_Title  String
  Level_number Int
  Players      Player[]
}

model Milestone { 
  Milestone_Id          Int    @id @default(autoincrement())
  Milestone_Title       String
  Milestone_description String
  Players               Player[] 
}

